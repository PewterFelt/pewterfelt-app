{
  "name": "pewterfelt-app",
  "main": "expo-router/entry",
  "version": "1.0.0",
  "scripts": {
    "prepare": "is-ci || husky",
    "start": "expo start",
    "dev:go": "watchman watch-del $(pwd) ; watchman watch-project $(pwd) ; expo start --go",
    "dev:client": "expo start --dev-client",
    "dev:web": "expo start --web",
    "dev:android": "expo run:android",
    "dev:ios": "watchman watch-del $(pwd) ; watchman watch-project $(pwd) ; expo run:ios",
    "build:android:dev": "eas build --platform android --profile development --local",
    "build:android:dev:remote": "eas build --platform android --profile development",
    "build:android:preview": "eas build --platform android --profile preview --local",
    "build:android:preview:remote": "eas build --platform android --profile preview",
    "build:android:prod": "eas build --platform android --profile production --local",
    "build:android:prod:remote": "eas build --platform android --profile production",
    "build:ios:dev": "eas build --platform ios --profile development --local",
    "build:ios:dev:remote": "eas build --platform ios --profile development",
    "build:ios:preview": "eas build --platform ios --profile preview --local",
    "build:ios:preview:remote": "eas build --platform ios --profile preview",
    "build:ios:prod": "eas build --platform ios --profile production --local",
    "build:ios:prod:remote": "eas build --platform ios --profile production",
    "submit:ios": "eas submit --platform ios",
    "test": "NODE_ENV=test jest --forceExit --testTimeout=20000 --bail",
    "test-watch": "NODE_ENV=test jest --watchAll",
    "test-coverage": "NODE_ENV=test jest --coverage",
    "lint": "eslint --cache",
    "prettier:check": "prettier . --check",
    "prettier:write": "prettier . --write",
    "type-check": "tsc --noEmit",
    "expo:doctor": "npx expo-doctor",
    "expo:check-deps": "npx expo install --check",
    "expo:gen-types": "npx expo customize tsconfig.json",
    "reset-project": "node ./scripts/reset-project.js"
  },
  "expo": {
    "doctor": {
      "reactNativeDirectoryCheck": {
        "enabled": true,
        "exclude": [],
        "listUnknownPackages": false
      }
    }
  },
  "jest": {
    "preset": "jest-expo"
  },
  "lint-staged": {
    "*{.js,.jsx,.ts,.tsx}": [
      "eslint --cache --fix"
    ],
    "*{.js,.jsx,.ts,.tsx,.css}": [
      "prettier --cache --write --ignore-unknown"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "@expo/vector-icons": "^14.0.2",
    "@react-native-async-storage/async-storage": "1.24.0",
    "@react-navigation/bottom-tabs": "^7.2.0",
    "@react-navigation/native": "^7.0.14",
    "@supabase/supabase-js": "^2.49.4",
    "expo": "~52.0.38",
    "expo-blur": "~14.1.0",
    "expo-constants": "~17.1.0",
    "expo-font": "~13.3.0",
    "expo-haptics": "~14.1.0",
    "expo-linking": "~7.1.0",
    "expo-auth-session": "~6.1.0",
    "expo-crypto": "~14.1.0",
    "expo-dev-client": "~5.1.0",
    "expo-router": "~4.0.18",
    "expo-splash-screen": "~0.29.24",
    "expo-status-bar": "~2.0.1",
    "expo-symbols": "~0.2.2",
    "expo-system-ui": "~4.0.8",
    "expo-web-browser": "~14.0.2",
    "nativewind": "^4.1.23",
    "phosphor-react-native": "^2.3.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-native": "0.79.2",
    "react-native-gesture-handler": "~2.25.0",
    "react-native-reanimated": "~3.17.0",
    "react-native-safe-area-context": "4.14.1",
    "react-native-screens": "~4.10.0",
    "react-native-svg": "^15.8.0",
    "react-native-url-polyfill": "^2.0.0",
    "react-native-web": "~0.20.0",
    "react-native-webview": "13.13.5",
    "tailwindcss": "^3.4.17"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/js": "^9.18.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@types/jest": "^29.5.12",
    "@types/react": "~18.3.12",
    "@types/react-test-renderer": "^18.3.0",
    "eslint": "^9.18.0",
    "eslint-plugin-react": "^7.37.4",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "is-ci": "^4.1.0",
    "jest": "^29.2.1",
    "jest-expo": "~52.0.6",
    "lint-staged": "^16.0.0",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.10",
    "react-test-renderer": "18.3.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.20.0"
  },
  "private": true,
  "packageManager": "pnpm@10.14.0+sha512.ad27a79641b49c3e481a16a805baa71817a04bbe06a38d17e60e2eaee83f6a146c6a688125f5792e48dd5ba30e7da52a5cda4c3992b9ccf333f9ce223af84748"
}
